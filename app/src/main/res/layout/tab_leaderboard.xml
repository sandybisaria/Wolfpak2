<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/leaderboard_background_grey"
    android:id="@+id/leaderboard_swipe_refresh_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/leaderboard_karma_size"
            android:layout_height="@dimen/leaderboard_karma_size"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/background_karma"
            android:textSize="@dimen/leaderboard_karma_text_size"
            android:visibility="gone"
            android:id="@+id/leaderboard_den_karma_text_view"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:id="@+id/leaderboard_recycler_view"/>

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>